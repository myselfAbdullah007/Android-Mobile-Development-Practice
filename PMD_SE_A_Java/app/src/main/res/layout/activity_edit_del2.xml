<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Student Name"
        android:layout_margin="16dp" />

    <EditText
        android:id="@+id/editTextSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Section"
        android:layout_below="@id/editTextName"
        android:layout_margin="16dp" />

    <EditText
        android:id="@+id/editTextRollNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Roll No"
        android:layout_below="@id/editTextSection"
        android:layout_margin="16dp" />

    <EditText
        android:id="@+id/editTextCnic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CNIC"
        android:layout_below="@id/editTextRollNo"
        android:layout_margin="16dp" />

    <EditText
        android:id="@+id/editTextCgpa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCnic"
        android:layout_margin="16dp"
        android:layout_marginTop="105dp"
        android:layout_marginBottom="16dp"
        android:hint="CGPA" />

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCgpa"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="201dp"
        android:text="Edit" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonEdit"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="68dp"
        android:layout_toEndOf="@+id/buttonEdit"
        android:text="Delete" />

</RelativeLayout>
